---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import FeaturedPosts from '../../components/FeaturedPosts.astro';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Blog - Modern Tech Blog">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8 text-gray-900 dark:text-gray-100">Latest Posts</h1>
    <FeaturedPosts posts={sortedPosts} />
  </div>
</Layout>