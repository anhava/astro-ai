---
interface Props {
  title: string;
  excerpt: string;
  category: string;
  date: Date;
  readTime: string;
  href: string;
}

const { title, excerpt, category, date, readTime, href } = Astro.props;
---

<article class="glass rounded-xl overflow-hidden hover:ring-2 ring-primary-500 transition-all group">
  <div class="p-6">
    <div class="flex items-center gap-2 mb-4">
      <span class="px-3 py-1 text-sm bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 rounded-full">
        {category}
      </span>
      <span class="text-sm text-gray-600 dark:text-gray-400">
        {readTime} read
      </span>
    </div>

    <h3 class="text-xl font-semibold mb-2 text-gray-800 dark:text-gray-100 group-hover:text-primary-500 transition-colors">
      <a href={href}>
        {title}
      </a>
    </h3>

    <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-2">
      {excerpt}
    </p>

    <div class="flex justify-between items-center text-sm text-gray-500 dark:text-gray-400">
      <time datetime={date.toISOString()}>
        {new Intl.DateTimeFormat('en-US', { 
          month: 'short',
          day: 'numeric',
          year: 'numeric'
        }).format(date)}
      </time>
      
      <a 
        href={href}
        class="inline-flex items-center gap-1 text-primary-600 dark:text-primary-400 group-hover:gap-2 transition-all"
      >
        Read more
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
    </div>
  </div>
</article>