---
interface Props {
  type: 'Article' | 'WebSite' | 'BlogPosting' | 'TechArticle';
  data: Record<string, any>;
}

const { type, data } = Astro.props;

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': type,
  ...data,
};
---

<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />