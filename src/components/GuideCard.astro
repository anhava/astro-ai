---
interface Props {
  title: string;
  description: string;
  difficulty: 'beginner' | 'intermediate' | 'advanced';
  duration: string;
  icon: string;
  href: string;
}

const { title, description, difficulty, duration, icon, href } = Astro.props;

const difficultyColors = {
  beginner: 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200',
  intermediate: 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200',
  advanced: 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200'
};
---

<article class="glass rounded-xl overflow-hidden hover:ring-2 ring-primary-500 transition-all">
  <div class="p-6">
    <div class="flex items-start justify-between mb-4">
      <div class="flex items-center gap-3">
        <span class="text-3xl">{icon}</span>
        <div>
          <span class={`px-3 py-1 text-sm rounded-full ${difficultyColors[difficulty]}`}>
            {difficulty.charAt(0).toUpperCase() + difficulty.slice(1)}
          </span>
          <span class="ml-2 text-sm text-gray-600 dark:text-gray-400">
            ⏱️ {duration}
          </span>
        </div>
      </div>
    </div>

    <h3 class="text-xl font-semibold mb-2 text-gray-800 dark:text-gray-100">
      <a href={href} class="hover:text-primary-500 transition-colors">
        {title}
      </a>
    </h3>

    <p class="text-gray-600 dark:text-gray-400 mb-4">
      {description}
    </p>

    <div class="flex justify-between items-center">
      <a 
        href={href}
        class="inline-flex items-center gap-2 text-primary-600 dark:text-primary-400 hover:underline"
      >
        Start Guide
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</article>